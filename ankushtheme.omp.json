{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "blocks": [
    {
      "type": "rprompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "template": "{{ if .Env.PNPPSHOST }} \uf8c5 {{ .Env.PNPPSHOST }} {{ end }}",
          "background": "p:tan",
          "foreground": "p:white",
          "Text": "",
          "Duration": 0,
          "NameLength": 0
        },
        {
          "type": "text",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": "{{ if .Env.PNPPSSITE }} \uf2dd {{ .Env.PNPPSSITE }}{{ end }}",
          "background": "p:teal",
          "foreground": "p:white",
          "Text": "",
          "Duration": 0,
          "NameLength": 0
        },
        {
          "type": "text",
          "style": "diamond",
          "trailing_diamond": "\ue0b4",
          "template": "{{ if .Env.PNPPSSITE }} {{ end }}",
          "background": "p:teal",
          "foreground": "p:white",
          "Text": "",
          "Duration": 0,
          "NameLength": 0
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "diamond",
          // "leading_diamond": "\ue0b6",
          "template": " {{ .UserName }} ",
          "background": "p:plum",
          "foreground": "p:white",
          "Text": "",
          "Duration": 0,
          "NameLength": 0
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " {{ .Path }} ",
          "properties": {
            "style": "folder"
          },
          "background": "p:blush",
          "foreground": "p:white",
          "Text": "",
          "Duration": 0,
          "NameLength": 0
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " ({{ .HEAD }}{{ if gt .StashCount 0 }} {{ .StashCount }}{{ end }}) ",
          "properties": {
            "branch_icon": "",
            "fetch_stash_count": true,
            "fetch_status": false,
            "fetch_upstream_icon": true
          },
          "background": "p:salmon",
          "foreground": "p:black",
          "Text": "",
          "Duration": 0,
          "NameLength": 0
        },
        {
          "type": "node",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
          "background": "p:sky",
          "foreground": "p:black",
          "Text": "",
          "Duration": 0,
          "NameLength": 0
        },
        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " {{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }} ",
          "background": "p:sky",
          "foreground": "p:black",
          "Text": "",
          "Duration": 0,
          "NameLength": 0
        },
        {
          "type": "time",
          "style": "diamond",
          "trailing_diamond": "\ue0b0",
          "template": " ♥ {{ .CurrentDate | date .Format }} ",
          "properties": {
            "time_format": "15:04"
          },
          "background": "p:teal_blue",
          "foreground": "p:white",
          "Text": "",
          "Duration": 0,
          "NameLength": 0
        }
      ]
    }
  ],
  "palette": {
    "black": "#000000",
    "blush": "#DA627D",
    "plum": "#9A348E",
    "salmon": "#FCA17D",
    "sky": "#86BBD8",
    "tan": "#CC3802",
    "teal": "#047E84",
    "teal_blue": "#33658A",
    "white": "#FFFFFF"
  }
}
